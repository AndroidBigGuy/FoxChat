<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <com.wangyeming.custom.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/left_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/white_fox"
            app:border_color="#FFFFFF"
            app:border_width="2dp" />


        <TextView
            android:id="@+id/left_dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rect_shape_blue"
            android:text="你好，什么时候涨工资？"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/left_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="上午11:45"
            android:textSize="12sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/right_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="上午11:45"
            android:textSize="12sp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/right_dialog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="5dp"
            android:background="@drawable/rect_shape_green"
            android:text="当然是今天！"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />

        <com.wangyeming.custom.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/white_fox"
            app:border_color="#FFFFFF"
            app:border_width="2dp" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wangyeming.custom.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/left_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/person1"
            app:border_color="#FFFFFF"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/left_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_shape_blue"
            android:text="你好，什么时候涨工资？"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/left_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="上午11:45"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp">

        <TextView
            android:id="@+id/right_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="上午11:45"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/right_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_shape_green"
            android:text="当然是今天！"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <com.wangyeming.custom.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/right_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/person1"
            app:border_color="#FFFFFF"
            app:border_width="2dp" />

    </LinearLayout>


</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ActionBar 样式 -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:title"></item>
    </style>

    <!-- ActionBar 标题文本 -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#778899</item>
    </style>

    <!-- ActionBar Tab标签 文本样式 -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#778899</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#33691E</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#689F38</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 按钮样式 -->
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:displayOptions"></item>
        <!-- SearchView样式-->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <!-- bottomSheet样式 -->
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
    </style>

    <style name="buttonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:background">#2196F3</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="voiceIcon">@drawable/ic_keyboard_voice_white</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">#f0fcff</item>
        <item name="bs_dividerColor">#FFFFFF</item>
        <item name="bs_numColumns">4</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>


</resources>
